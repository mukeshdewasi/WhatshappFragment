<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to WhatsApp"
        android:textSize="30dp"
        android:textColor="#06870D"
        android:gravity="center"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/whatsapponboarding"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read our Privacy Policy. Tap Agree and continue to accept the Terms of Service."
        android:textSize="20dp"
        android:layout_below="@id/circle"
        android:gravity="center"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacy"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="AGREE AND CONTINUE"
        android:textSize="18dp"
        android:backgroundTint="#06870D"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="from"
        android:layout_below="@id/btn_agree"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/meta"
            app:tint="#13AC0B"
            android:layout_gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meta"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="#13AC0B"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>
